<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/productschainsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exitbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Calculate production tree" />

    <Button
        android:id="@+id/exitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/productschainsettings"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/productschainsettings"
        android:layout_marginBottom="25dp"
        android:text="Exit" />

    <Button
        android:id="@+id/ProductsListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/productschainsettings"
        android:layout_alignLeft="@+id/productschainsettings"
        android:layout_alignRight="@+id/productschainsettings"
        android:layout_marginBottom="19dp"
        android:text="List of products" />

</RelativeLayout>
